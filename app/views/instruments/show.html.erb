<div class="row mt-3">
  <div class="col-md-9">
    <h3><%= @instrument.title %></h3>
    <ul class="nav">
      <% if @instrument.brand? %>
        <li class="nav-link">
          <%= @instrument.brand %>
        </li>
      <% end %>

      <% if @instrument.finish? %>
        <li class="nav-link">
          <%= @instrument.finish %>
        </li>
      <% end %>

      <% if @instrument.condition? %>
        <li class="nav-link">
          <%= @instrument.condition %>
        </li>
      <% end %>
    </ul>
    <div class="img-fluid image">
      <%= image_tag(@instrument.image_url(:default)) %>
    </div>
    <div>
      <%= @instrument.description %>
    </div>
    <h3>
      Product Specs
    </h3>
    <table>
      <% if @instrument.condition %>
        <tr>
          <td>Condition:</td>
          <td><%= @instrument.condition %></td>
        </tr>
      <% end %>

      <% if @instrument.brand %>
        <tr>
          <td>Brand:</td>
          <td><%= @instrument.brand %></td>
        </tr>
      <% end %>

      <% if @instrument.model %>
        <tr>
          <td>Finish:</td>
          <td><%= @instrument.finish %></td>
        </tr>
      <% end %>
    </table>
  </div>


  <div class="col-md-3">
    <h3>
      <%= number_to_currency(@instrument.price) %>
    </h3>
    <p>
      Sold by <%= @instrument.user.name %>
    </p>
    <%= button_to "Add to cart", line_items_path(instrument_id: @instrument), 
      class: "btn btn-warning" %>
  </div>
</div>

<% if instrument_author(@instrument) %>
  <%= link_to "Edit", edit_instrument_path(@instrument), 
    class: "btn btn-outline-secondary" %>
<% end %>
